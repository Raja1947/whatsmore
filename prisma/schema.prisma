// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider        = "prisma-client-js"
   previewFeatures = ["driverAdapters"]

}
datasource db {
  provider = "postgresql"
  url      = env("NEON_URL")
}
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Stories{
  id Int   @id 
  imageId  String
  videoId  String

}

model Collections{
  id Int @id
  imageId   String
  videoId   String
  collectionId  String
  productId     String
}
model Carousels{
  id  Int @id
   imageId   String
  videoId   String
  collectionId  String
  productId     String
  
}
model Banners{
    id  Int @id
   imageId   String
  videoId   String
  collectionId  String
  productId     String
}
model uploadedFile{
  id       Int @id @default(autoincrement())
  url      String
  createdAt   DateTime @default(now())
  selected    Boolean @default(false)
  productLinks   ProductTimestamp[]
}

model ProductTimestamp {
  id             Int          @id @default(autoincrement())
  uploadedFile   uploadedFile  @relation(fields: [uploadedFileId], references: [id])
  uploadedFileId Int

  variantId      String         
  timestamp      Int         
}
