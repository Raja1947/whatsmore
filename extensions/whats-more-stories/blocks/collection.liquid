{{ 'main.css' | asset_url | stylesheet_tag }}

<style>
  .collection-container {
    display: flex;
    gap: 16px;
    padding: 16px;
    overflow-x: auto;
    flex-wrap: wrap;
    -webkit-overflow-scrolling: touch;
    margin-bottom: 16px;
  }

  .collection-item {
    position: relative;
    display: inline-block;
    width: 250px;
    height: 250px;
    background-color: #ddd;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
  }

  .collection-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  #loading-collection {
    color: #888;
    font-size: 14px;
  }
</style>

<div class="collection-container" id="collection-container">
  <p id="loading-collection">Loading collection...</p>
</div>

<script>
  async function loadCollectionFromProxy() {
    try {
      const res = await fetch('https://impression-steps-belongs-deleted.trycloudflare.com/app/proxy');
      const responseJson = await res.json();

      console.log("Full response:", responseJson);

      const items = Array.isArray(responseJson) ? responseJson : responseJson.data || [];
      console.log("Items array:", items);

      const container = document.getElementById('collection-container');
      document.getElementById('loading-collection')?.remove();

      if (items.length > 0) {
        items.forEach((item) => {
          const collectionDiv = document.createElement('div');
          collectionDiv.className = 'collection-item';

          const video = document.createElement('video');
          video.src = item.url;
          video.autoplay = true;
          video.loop = true;
          video.muted = true;
          video.playsInline = true; 
          video.setAttribute('preload', 'auto'); 

          collectionDiv.appendChild(video);
          container.appendChild(collectionDiv);
        });
      } else {
        container.innerHTML = '<p>No items found in collection.</p>';
      }
    } catch (err) {
      console.error("Failed to load collection", err);
      document.getElementById('collection-container').innerHTML = '<p>Error loading collection.</p>';
    }
  }

  loadCollectionFromProxy();
</script>

