{{ 'main.css' | asset_url | stylesheet_tag }}


<div class="collection-header">
    <h1>Summer Collection</h1>
    <p>Browse our top picks for the season</p>
  </div>

<div class="collection-container">
    <div class="product-card">
      <div class="product-image">
        {% comment %} <img src="https://via.placeholder.com/300x300" alt="Product 1"> {% endcomment %}
      </div>
      <div class="product-info">
        <div class="product-title">Sunglasses</div>
        <div class="product-price">$29.99</div>
      </div>
    </div>

    <div class="product-card">
      <div class="product-image">
        {% comment %} <img src="https://via.placeholder.com/300x300" alt="Product 2"> {% endcomment %}
      </div>
      <div class="product-info">
        <div class="product-title">Beach Hat</div>
        <div class="product-price">$19.99</div>
      </div>
    </div>

    <div class="product-card">
      <div class="product-image">
        {% comment %} <img src="https://via.placeholder.com/300x300" alt="Product 3"> {% endcomment %}
      </div>
      <div class="product-info">
        <div class="product-title">Flip Flops</div>
        <div class="product-price">$14.99</div>
      </div>
    </div>

    <div class="product-card">
      <div class="product-image">
        {% comment %} <img src="https://via.placeholder.com/300x300" alt="Product 4"> {% endcomment %}
      </div>
      <div class="product-info">
        <div class="product-title">{{ section.settings.collection }}</div>
        <div class="product-price">$39.99</div>
      </div>
    </div>
  </div>

  {% schema %}
  {
    "name":"Collection",
    "target":"section",
    "settings":[
        {
            "type":"text",
            "id":"collection",
            "label":"collection one",
            "default":"Tropical"
        }
      
    ]
}
   {%  endschema %}